  "scripts": {
    "clean": "rm -rf build",
    "copy:posts": "npm run clean && mkdir build && mkdir build/server && mkdir build/server/data && cp -r src/server/data/posts build/server/data",
    "start": "npm run copy:posts && babel src/server -w -d build/server --no-babelrc --presets=es2015,stage-3 & nodemon --watch build --delay 2 build/server/server.js",
    "build": "npm run copy:posts && NODE_ENV=production npm run build:server && NODE_ENV=production npm run build:client",
    "build:client": "webpack --config config/webpack/client.js --display-optimization-bailout && webpack --config config/webpack/server.js",
    "build:clientDll": "webpack --config config/webpack/dll.js",
    "build:server": "babel src/server -d build/server --no-babelrc --presets=es2015,stage-3",
    "start:server": "NODE_ENV=production pm2 start build/server/server.js --name blog -i 2 --output /var/log/node/out.log --error /var/log/node/error.log --no-daemon",
    "stop:server": "pm2 stop blog",
    "log": "pm2 logs"
  }
}
