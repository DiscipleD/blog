    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.23.1",
    "es6-promise": "^4.0.5",
    "eslint": "^2.8.0",
    "eslint-friendly-formatter": "^2.0.2",
    "eslint-loader": "^1.6.1",
